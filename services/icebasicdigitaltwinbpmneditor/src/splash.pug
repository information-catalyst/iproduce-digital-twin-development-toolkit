style.
  splash-screen {
  width: 100%;
  min-height: 100vh;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 9999;
  overflow: hidden;
  }
  splash-screen .text {
  font-size: 60px;
  color: white;
  z-index: 1000;
  }
  splash-screen .centered {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  }
  splash-screen:before,
  splash-screen:after {
  content: '';
  width: 100%;
  height: 50%;
  position: absolute;
  left: 0;
  background: #768bb0;
  transition: transform 1s ease;
  }
  splash-screen:before {
  top: 0;
  }
  splash-screen:after {
  bottom: 0;
  }
  splash-screen.ready:before {
  -webkit-transform: translate3d(-100vw, 0, 0);
  transform: translate3d(-100vw, 0, 0);
  }
  splash-screen.ready:after {
  -webkit-transform: translate3d(100vw, 0, 0);
  transform: translate3d(100vw, 0, 0);
  }
